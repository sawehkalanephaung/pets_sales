@model sales_pets.Models.Pet

@{
    ViewData["Title"] = "Update Pet";
}

<div class="container mt-5 bg-dark p-5 text-white rounded w-50 h-auto">
    <h2 class="mb-4">Update Pet</h2>
    <form method="post" action="@Url.Action("Update", "Category", new { id = Model.Id })">
        <div class="mb-3">
            <label for="petName" class="form-label">Pet Name</label>
            <input type="text" class="form-control" id="petName" name="Name" value="@Model.Name" required>
        </div>
           <div class="mb-3">
            <label for="photoUrls" class="form-label">Photo URLs</label>
            <input type="text" class="form-control" id="photoUrls" name="PhotoUrls" value="@string.Join(",", Model.PhotoUrls)" placeholder="Enter photo URLs separated by commas">
        </div>
         <div class="mb-3">
            <label for="tags" class="form-label">Tags</label>
            <input type="text" class="form-control" id="tags" name="Tags" value="@string.Join(",", Model.Tags.Select(t => t.Name))" placeholder="Enter tags separated by commas">
        </div>
        <div class="mb-3">
            <label for="petCategory" class="form-label">Category</label>
            <select class="form-select" id="petCategory" name="CategoryName" required>
                <option value="Dog" selected="@(Model.CategoryName == "Dog")">Dog</option>
                <option value="Cat" selected="@(Model.CategoryName == "Cat")">Cat</option>
                <option value="Fish" selected="@(Model.CategoryName == "Fish")">Fish</option>
                <!-- Add more categories as needed -->
            </select>
        </div>
        <div class="mb-3">
            <label for="petStatus" class="form-label">Status</label>
            <select class="form-select" id="petStatus" name="Status" required>
                <option value="available" selected="@(Model.Status == "available")">Available</option>
                <option value="pending" selected="@(Model.Status == "pending")">Pending</option>
                <option value="sold" selected="@(Model.Status == "sold")">Sold</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="petPrice" class="form-label">Price</label>
            <input type="number" class="form-control" id="petPrice" name="Price" value="@Model.Price" step="0.01" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Pet</button>
    </form>
</div>
